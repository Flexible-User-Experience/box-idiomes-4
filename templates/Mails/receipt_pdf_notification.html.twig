{% extends "Mails/base.html.twig" %}

{% block content %}
    <row>
        <columns small="12" large="12">
            <h3 class="grey-color">Rebut núm. {{ receipt.receiptNumber }}</h3>
            <spacer size="15"></spacer>
        </columns>
    </row>
    <row>
        <columns small="12" large="12">
            <h5 class="grey-color">A contiuació trobaràs adjunt el rebut número {{ receipt.receiptNumber }} amb data {{ receipt.dateString }}</h5>
            {% if receipt.lines | length > 0 %}
                <p>
                    {{ receipt.lines[0].description }}
                </p>
            {% endif %}
            <p>
                <strong>Import total: {{ receipt.baseAmountString }}</strong>
            </p>
            <p class="blue-color text-center only-normal-m-top">
                Moltes gràcies per confiar amb {{ main_brand_title }}.
            </p>
        </columns>
    </row>
{% endblock %}
