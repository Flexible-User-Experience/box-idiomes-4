<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="author" content="www.flux.cat">
    <meta charset="UTF-8">
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
    <title>{{ main_brand_title }}</title>
    {{ encore_entry_link_tags('frontend') }}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="apple-touch-icon" href="{{ asset('favicon.png') }}"/>
    {{ encore_entry_script_tags('frontend') }}
    {{ encore_entry_script_tags('scroll_to_flash') }}
</head>
<body class="pt-3">
    <div class="modal" id="privacy-policy-modal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {% include 'Front/includes/privacy_policy_fragment.html.twig' %}
                </div>
            </div>
        </div>
    </div>
    {% include 'Front/includes/notice_flash.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                {{ form_start(contactMessageForm) }}
                    {{ form_row(contactMessageForm.name) }}
                    {{ form_row(contactMessageForm.phone) }}
                    {{ form_row(contactMessageForm.email) }}
                    {{ form_row(contactMessageForm.message) }}
                    {{ form_row(contactMessageForm.captcha) }}
                    {{ form_row(contactMessageForm.privacy) }}
                    {{ form_rest(contactMessageForm) }}
                {{ form_end(contactMessageForm) }}
            </div>
        </div>
    </div>
</body>
</html>
