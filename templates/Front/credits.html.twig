{% extends 'Front/layout.html.twig' %}

{% block title %}{{ 'frontend.credits.credits' | trans | capitalize }} · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row my-5">
            <div class="col-4">
                <div class="card text-white border-0">
                    <img src="{{ asset('build/img/crèdits-bubble-box.png') }}" class="card-img border-0 rounded-0" alt="credits buble box">
                    <div class="card-img-overlay">
                        <h5 class="card-title text-center my-3">{{ 'frontend.credits.credits' | trans | upper }}</h5>
                        <p class="card-text text-center">
                            Disseny gràfic: Tu&Jo Disseny<br>
                            Fotografia: <a href="https://www.lazarofotograf.com/" target="_blank" class="text-white-50">Làzaro Fotògraf</a><br>
                            Desenvolupament web: <a href="https://www.flux.cat" target="_blank" class="text-white-50">Flux</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
