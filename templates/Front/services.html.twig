{% extends "Front/layout.html.twig" %}

{% block title %}{{ 'frontend.menu.services' | trans | capitalize }} Â· {{ parent() }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 my-5">
            {% for service in services %}
                <div class="col mb-5">
                    {% if service.imageName is not null %}
                        <img src="{{ vich_uploader_asset(service, 'imageFile') | imagine_filter('585xY') }}"  class="img-fluid img-rounded mb-3" alt="{{ service.imageName }}">
                    {% else %}
                        <img src="{{ asset('img/serveis.jpeg') | imagine_filter('585xY') }}" class="img-fluid img-rounded mb-3" alt="serveis">
                    {% endif %}
                    <h4 class="c-blue">{{ service.title }}</h4>
                    <p>{{ service.description | raw }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
