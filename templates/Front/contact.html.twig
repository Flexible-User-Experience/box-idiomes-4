{% extends "Front/layout.html.twig" %}

{% form_theme contactMessageForm _self %}

{% block _contact_message_privacy_widget %}
    <div class="icheck-primary">
        <input type="checkbox" id="privacy_checkbox" {{ block('widget_attributes') }} />
        <label class="control-label my-privacy-label" for="privacy_checkbox">
            Accepto la <a class="c-blue text-decoration-none" data-bs-toggle="modal" data-bs-target="#privacy-policy-modal">política de privacitat</a>
        </label>
    </div>
{% endblock %}

{% block title %}{{ 'frontend.menu.contact' | trans | capitalize }} · {{ parent() }}{% endblock %}

{% block main %}
    <div class="modal" id="privacy-policy-modal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {% include 'Front/includes/privacy_policy_fragment.html.twig' %}
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row my-5">
            <div class="col-sm-5 col-md-4">
                {{ form_start(contactMessageForm) }}
                    {{ form_row(contactMessageForm.name) }}
                    {{ form_row(contactMessageForm.phone) }}
                    {{ form_row(contactMessageForm.email) }}
                    {{ form_row(contactMessageForm.message) }}
                    {{ form_row(contactMessageForm.captcha) }}
                    {{ form_row(contactMessageForm.privacy) }}
                    {{ form_rest(contactMessageForm) }}
                {{ form_end(contactMessageForm) }}
            </div>
            <div class="col-sm-7 col-md-8">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.5072781155122!2d0.576481316165754!3d40.70684804586621!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a0fe73ccaf4f93%3A0x119fca1f95b42607!2sBox%20Idiomes!5e0!3m2!1ses!2ses!4v1643917268512!5m2!1ses!2ses" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
    {% include 'Front/includes/notice_flash.html.twig' %}
{% endblock %}
